---
import AdminLayout from '../../layouts/AdminLayout.astro';
import ClientesTable from '../../components/ClientesTable.jsx';

const supabase = Astro.locals.supabase;
const { data: { session } } = await supabase.auth.getSession();

if (!session?.user) {
    return Astro.redirect('/login');
}

const { data: profile } = await supabase
    .from('perfiles')
    .select('rol')
    .eq('id', session.user.id)
    .single();

if (profile?.rol !== 'administrador') {
    return Astro.redirect('/');
}
---

<AdminLayout title="Gestión de Clientes">
    <div class="min-h-screen bg-gradient-to-br from-gray-50 via-white to-gray-100 p-8">
        <div class="max-w-7xl mx-auto">
            <!-- Header -->
            <div class="mb-8">
                <div class="flex items-center gap-4 mb-3">
                    <div class="w-12 h-12 bg-gradient-to-br from-red-500 to-red-700 rounded-xl flex items-center justify-center shadow-lg">
                        <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-4xl font-bold text-gray-900">Gestión de Clientes</h1>
                        <p class="text-gray-600 mt-1">Visualiza y gestiona la información de los usuarios registrados</p>
                    </div>
                </div>
            </div>

            <!-- Tabla de Clientes -->
            <ClientesTable client:load />
        </div>
    </div>
</AdminLayout>