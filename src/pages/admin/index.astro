---
import AdminLayout from '../../layouts/AdminLayout.astro';

const supabase = Astro.locals.supabase;
const { data: { session } } = await supabase.auth.getSession();

if (!session?.user) {
    return Astro.redirect('/login');
}

const { data: profile } = await supabase
    .from('perfiles')
    .select('rol, nombre, apellido')
    .eq('id', session.user.id)
    .single();

if (profile?.rol !== 'administrador') {
    return Astro.redirect('/');
}

// Obtener datos reales de la base de datos
const { count: totalPeliculas } = await supabase
    .from('peliculas')
    .select('*', { count: 'exact', head: true });

const { count: totalClientes } = await supabase
    .from('perfiles')
    .select('*', { count: 'exact', head: true })
    .eq('rol', 'cliente');

const { data: peliculasCartelera } = await supabase
    .from('peliculas')
    .select('*')
    .eq('estado', 'En cartelera')
    .limit(5);

const nombreAdmin = profile?.nombre || 'Administrador';
---

<AdminLayout title="Dashboard">
    <div class="min-h-screen bg-gradient-to-br from-gray-50 via-white to-gray-100 p-8">
        <div class="max-w-7xl mx-auto">
            <!-- Header -->
            <div class="mb-8">
                <h1 class="text-4xl font-bold text-gray-900">Dashboard</h1>
                <p class="text-gray-600 mt-2">Bienvenido de vuelta, <span class="font-semibold text-gray-900">{nombreAdmin}</span>. Aquí tienes un resumen de tu cine.</p>
            </div>

            <!-- Stats Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
                <!-- Tarjeta: Total Películas -->
                <div class="bg-white rounded-xl shadow-lg border border-gray-200 p-6 hover:shadow-xl transition-shadow duration-200">
                    <div class="flex items-center justify-between mb-4">
                        <div class="w-12 h-12 bg-gradient-to-br from-red-500 to-red-700 rounded-xl flex items-center justify-center shadow-lg">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z"/>
                            </svg>
                        </div>
                        <span class="text-3xl font-bold text-gray-900">{totalPeliculas || 0}</span>
                    </div>
                    <h3 class="text-sm font-semibold text-gray-600 uppercase tracking-wide">Total Películas</h3>
                    <p class="text-xs text-gray-500 mt-1">Películas en el sistema</p>
                </div>

                <!-- Tarjeta: Clientes Registrados -->
                <div class="bg-white rounded-xl shadow-lg border border-gray-200 p-6 hover:shadow-xl transition-shadow duration-200">
                    <div class="flex items-center justify-between mb-4">
                        <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-700 rounded-xl flex items-center justify-center shadow-lg">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                            </svg>
                        </div>
                        <span class="text-3xl font-bold text-gray-900">{totalClientes || 0}</span>
                    </div>
                    <h3 class="text-sm font-semibold text-gray-600 uppercase tracking-wide">Clientes Registrados</h3>
                    <p class="text-xs text-gray-500 mt-1">Usuarios en el sistema</p>
                </div>

                <!-- Tarjeta: En Cartelera -->
                <div class="bg-white rounded-xl shadow-lg border border-gray-200 p-6 hover:shadow-xl transition-shadow duration-200">
                    <div class="flex items-center justify-between mb-4">
                        <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-700 rounded-xl flex items-center justify-center shadow-lg">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                        </div>
                        <span class="text-3xl font-bold text-gray-900">{peliculasCartelera?.length || 0}</span>
                    </div>
                    <h3 class="text-sm font-semibold text-gray-600 uppercase tracking-wide">En Cartelera</h3>
                    <p class="text-xs text-gray-500 mt-1">Películas disponibles ahora</p>
                </div>
            </div>

            <!-- Sección: Películas Recientes -->
            <div class="bg-white rounded-xl shadow-lg border border-gray-200 p-6">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-xl font-bold text-gray-900">Películas en Cartelera</h2>
                    <a href="/admin/peliculas" class="text-red-600 hover:text-red-700 font-semibold text-sm flex items-center gap-1 transition-colors">
                        Ver todas
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                        </svg>
                    </a>
                </div>

                {peliculasCartelera && peliculasCartelera.length > 0 ? (
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-4">
                        {peliculasCartelera.map((pelicula) => (
                            <div key={pelicula.id} class="group relative">
                                <div class="aspect-[2/3] rounded-lg overflow-hidden shadow-md group-hover:shadow-xl transition-shadow duration-200">
                                    <img 
                                        src={pelicula.imagen_url} 
                                        alt={pelicula.titulo}
                                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                                        onError={(e) => {
                                            e.target.src = 'https://via.placeholder.com/200x300?text=No+Image';
                                        }}
                                    />
                                </div>
                                <div class="mt-2">
                                    <h3 class="font-semibold text-sm text-gray-900 line-clamp-1">{pelicula.titulo}</h3>
                                    <p class="text-xs text-gray-500 mt-1">{pelicula.duracion} min</p>
                                </div>
                            </div>
                        ))}
                    </div>
                ) : (
                    <div class="text-center py-12">
                        <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z"/>
                        </svg>
                        <p class="text-gray-500 font-medium">No hay películas en cartelera</p>
                        <a href="/admin/peliculas/nueva" class="inline-block mt-4 text-red-600 hover:text-red-700 font-semibold text-sm">
                            Añadir primera película
                        </a>
                    </div>
                )}
            </div>

            <!-- Accesos Rápidos -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mt-8">
                <a href="/admin/peliculas/nueva" class="bg-gradient-to-br from-red-50 to-red-100 border-2 border-red-200 rounded-xl p-6 hover:shadow-lg transition-all duration-200 group">
                    <div class="flex items-center gap-4">
                        <div class="w-10 h-10 bg-red-600 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform">
                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold text-gray-900">Nueva Película</h3>
                            <p class="text-xs text-gray-600">Añadir a cartelera</p>
                        </div>
                    </div>
                </a>

                <a href="/admin/clientes" class="bg-gradient-to-br from-blue-50 to-blue-100 border-2 border-blue-200 rounded-xl p-6 hover:shadow-lg transition-all duration-200 group">
                    <div class="flex items-center gap-4">
                        <div class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform">
                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold text-gray-900">Ver Clientes</h3>
                            <p class="text-xs text-gray-600">Gestionar usuarios</p>
                        </div>
                    </div>
                </a>

                <a href="/admin/peliculas" class="bg-gradient-to-br from-purple-50 to-purple-100 border-2 border-purple-200 rounded-xl p-6 hover:shadow-lg transition-all duration-200 group">
                    <div class="flex items-center gap-4">
                        <div class="w-10 h-10 bg-purple-600 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform">
                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z"/>
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold text-gray-900">Películas</h3>
                            <p class="text-xs text-gray-600">Ver cartelera completa</p>
                        </div>
                    </div>
                </a>

                <a href="/admin/ventas" class="bg-gradient-to-br from-green-50 to-green-100 border-2 border-green-200 rounded-xl p-6 hover:shadow-lg transition-all duration-200 group">
                    <div class="flex items-center gap-4">
                        <div class="w-10 h-10 bg-green-600 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform">
                            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold text-gray-900">Ventas</h3>
                            <p class="text-xs text-gray-600">Ver reportes</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</AdminLayout>